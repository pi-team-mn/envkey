{
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "es2017"
    ],
    "target": "es2017",
    "module": "commonjs",
    "outDir": "lib",
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true
  },
  "include": [
    "src"
  ]
}
